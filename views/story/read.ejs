 //      	});

 //      	$(this).parent().parent().fadeOut();
	// });

	$("#startReadingButton").click(function() {
		window.location = "/coming_soon";
	});

	// ADDS STORY TO USER'S LIST
	<%if(user){%>
		$("#addToListButton").click(function() {
			var user_id = <%-user.id%>,
			story_id = <%-story.id%>;

			$.post(
				'/list/create', {
					user_id: user_id,
					story_id: story_id
				},
				function() {
					window.location = "/story/read?name=<%-story.name%>";
				}
			).fail(function(res) {
				alert("Error:" + res.getResponseHeader("error"));
			});
		});

		$("#removeButton").click(function() {
			var user_id = <%-user.id%>,
			story_id = <%-story.id%>;

			$.post(
				'/list/delete', {
					user_id: user_id,
					story_id: story_id
				},
				function() {
					window.location = "/story/read?name=<%-story.name%>";
				}
			).fail(function(res) {
				alert("Error:" + res.getResponseHeader("error"));
			});
		});
	<%}%>


</script>