<!-- ******PROMO****** --> 
<section id="promo" class="promo section" style="background-color: #444444;">
    
    <span class="raster"></span>
    
    <div id="carousel-promo" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner promo-carousel">
            <%for(var i = 0; i < featured.length; i++){%>
                <div class="item <%-(i+1)%> <%if(i==0){%>active<%}%>">
                    <div class="container intro overlay">
                        <h2 class="title"><%-featured[i].name%>  <span class="small category"><%-featured[i].category%></span></h2>
                        <p class="summary"><%-featured[i].description%></p>
                        <a class="btn btn-cta btn-cta-secondary" href="/story/read?name=<%-featured[i].name%>">Learn More</a>
                        <span class="image" style="display: none;"><%-featured[i].full%></span>
                    </div><!--//intro-->
                </div>
            <%}%>
        </div>
    </div>
    
    <div class="fixed-container">
        <div class="social text-center">
            <div class="container">
                <span class="line">Love StoryCrush? Spread the word:</span> 
                
                <!--//twitter tweet button code starts -->
                <div class="twitter-tweet">
                    <a href="https://twitter.com/share" class="twitter-share-button" data-via="Story_Crush" data-hashtags="Story_Crush">Tweet</a><script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                </div>
                <!--//twitter tweet button code ends -->
                
                <!--//facebook like button code starts-->
                <div class="fb-like" data-href="http://themes.3rdwavemedia.com/tempo/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true" ></div>
                <!--//facebook like button code ends-->      
            </div>         
        </div><!--//social-->   
    </div>    
</section><!--//promo-->

