        	<button type="button" id="removeButton" class="btn btn-cta btn-cta-tertiary">Remove From My List</button>
        <%}else if(user){%>
        	<button type="button" id="addToListButton" class="btn btn-cta btn-cta-tertiary">Add to My List</button>
        <%}%>
